#!/bin/sh
#
# $OpenBSD: knot.rc,v 1.3 2015/04/12 17:09:20 jca Exp $

daemon="${PREFIX}/sbin/knotd -d"
knotc="${PREFIX}/sbin/knotc"

. /etc/rc.d/rc.subr

rc_start() {
	install -d -o _knot -g wheel -m 750 ${LOCALSTATEDIR}/run/knot/
	${knotc} checkconf || return 1
	${daemon} ${daemon_flags}
}

rc_check() {
	${knotc} status
}

rc_reload() {
	${knotc} reload
}

rc_stop() {
	${knotc} stop
}

rc_cmd $1
