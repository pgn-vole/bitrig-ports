+#ifdef __OpenBSD__
+    {
+        size_t len;
+        char **buf;
+
+        int mib[] = { CTL_KERN, KERN_PROC_ARGS, getpid(), KERN_PROC_ARGV };
+
+        if (sysctl (mib, 4, NULL, &len, NULL, 0) == -1)
+            return NULL;
+
+        buf = (char *) pa_xmalloc(len);
+
+        if (sysctl(mib, 4, buf, &len, NULL, 0) == 0) {
+            pa_strlcpy(s, basename(*buf), l);
+            pa_xfree(buf);
+            return s;
+        }
+
+        pa_xfree(buf);
+
+        /* fall thru */
+    }
+#endif /* __OpenBSD__ */
 
